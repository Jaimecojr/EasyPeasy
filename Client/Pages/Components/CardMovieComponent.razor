<div class="jumbotron">
    <h2>Peliculas</h2>
    <div class="container-fluid">
        <div class="row mb-3">
            @foreach (var Movie in Movies)
            {
                <div class="col-md-4">
                    <div class="card flex-md-row mb-4 box-shadow h-md-300">
                        <div class="card-body d-flex- flex-column aling-items-center">
                            <div class="card">
                                <img src=@Movie.Poster class="card-img-top" alt="movie.jpg">
                                <div class="card-body">
                                    <a href="/movie/@Movie.Id/@Movie.Name">
                                        <h5 class="card-title">@Movie.Name</h5>
                                    </a>
                                    <a href="/movies/edit/@Movie.Id">
                                        <div class="btn-sm">Edit</div> 
                                    </a>
                                    <a href="/movies/delete/@Movie.Id">
                                        <div class="btn-sm">Delete</div> 
                                    </a>

                                    <p class="card-text">@Movie.Sinopsis</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@Movie.Premier</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@code {
    [Parameter] public List<Movie> Movies {get;set;}
}