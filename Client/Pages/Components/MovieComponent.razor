@inject NavigationManager navigationManager
@inject IServiceMovie SMovie
<div style="margin-right: 2%; margin-bottom: 10px; text-align: center;">
    <a>
        <img src="@MovieSel.Poster" alt="" width="225px" height="300px">
    </a>
    <p style="max-width: 225px; height: 44px; font-size: 15px; font-weight: bold;">
        <label> @MovieSel.Name </label>
    </p>
    <div>
        <button type="button" class="btn btn-danger" @onclick=EliminarMTask>
            <a href="/">Eliminar </a>
        </button>
    </div>
</div>

@code {
    [Parameter] public Movie MovieSel {get;set;}
    [Parameter] public EventCallback<Movie> DeleteMovie1 {get;set;}
    private string urlMovie = string.Empty;
    protected override void OnInitialized(){
        urlMovie = $"movie/";
    }
    
    private async Task EliminarMTask(){
        SMovie.DeleteMovie(MovieSel.Id);
         await DeleteMovie1.InvokeAsync();
        navigationManager.NavigateTo("/");

    }
}